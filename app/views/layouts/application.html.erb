<!DOCTYPE html>
<html>
	<head>
		<h1><title><%= title %></title></h1>
		<%= stylesheet_link_tag	'application', media: 'all',
									'data-turbolinks-track' => true %>
		<%= javascript_include_tag	'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tag %>
		<%= render 'layouts/shim' %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<div class= "container">
			<%= yield %>
			<%= render 'layouts/footer' %>
		</div>
	</body>
</html>